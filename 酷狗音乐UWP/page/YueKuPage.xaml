                                    </Grid.RowDefinitions>
                                    <TextBlock Margin="10,0,0,0" FontWeight="Bold" Grid.Row="0" Foreground="{ThemeResource KuGou-BackgroundColor}" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="15">
                			<Run Text="热门歌单"/>
                                    </TextBlock>
