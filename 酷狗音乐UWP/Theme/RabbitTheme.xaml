<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KuGouMusicUWP">
    <ResourceDictionary.ThemeDictionaries >
        <ResourceDictionary x:Key="Light">
            <!--背景图片-->
            <ImageBrush x:Key="KuGou-Background" ImageSource="Skin/Rabbit/background.jpg"/>
            <!--背景颜色-->
            <SolidColorBrush x:Key="KuGou-BackgroundColor" Color="#FFAEC56D"/>
            <!--背景颜色透明点-->
            <SolidColorBrush x:Key="KuGou-BackgroundColor1" Color="#C8AEC56D"/>
            <!--背景颜色深点-->
            <SolidColorBrush x:Key="KuGou-BackgroundColor2" Color="#FF94A45C"/>
            <!--标题栏前景颜色-->
            <SolidColorBrush x:Key="KuGou-Foreground" Color="White"/>
            <!--文字颜色1-->
            <SolidColorBrush x:Key="KuGou-Front1" Color="Black"/>
            <!--文字颜色2-->
            <SolidColorBrush x:Key="KuGou-Front2" Color="#FF7C7C7C"/>
            <!--ListView背景色-->
            <SolidColorBrush x:Key="KuGou-List-Background" Color="#B4FFFFFF"/>
        </ResourceDictionary>
        <ResourceDictionary x:Key="Dark">
            <!--背景图片-->
            <ImageBrush x:Key="KuGou-Background" ImageSource="Skin/Rabbit/background.jpg"/>
            <!--背景颜色-->
            <SolidColorBrush x:Key="KuGou-BackgroundColor" Color="#FFAEC56D"/>
            <!--背景颜色透明点-->
            <SolidColorBrush x:Key="KuGou-BackgroundColor1" Color="#C8AEC56D"/>
            <!--背景颜色深点-->
            <SolidColorBrush x:Key="KuGou-BackgroundColor2" Color="#FF94A45C"/>
            <!--标题栏前景颜色-->
            <SolidColorBrush x:Key="KuGou-Foreground" Color="White"/>
            <!--文字颜色1-->
            <SolidColorBrush x:Key="KuGou-Front1" Color="Black"/>
            <!--文字颜色2-->
            <SolidColorBrush x:Key="KuGou-Front2" Color="#FF7C7C7C"/>
            <!--ListView背景色-->
            <SolidColorBrush x:Key="KuGou-List-Background" Color="#B4FFFFFF"/>
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
